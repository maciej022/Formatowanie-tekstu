<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox  HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="15" VerticalAlignment="Top" Margin="20,20,20,200">
            <TextBox.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Blue"></GradientStop>
                    <GradientStop Color="Green" ></GradientStop>
                    <GradientStop Color="Red" ></GradientStop>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>

        <Slider Name="SuwakRozmiaru" Orientation="Vertical" Minimum="8" Maximum="38" Value="14" VerticalAlignment ="Top" HorizontalAlignment="Right" Margin="0,20,348,0" ValueChanged ="SuwakRozmiaru_ZmienionaWartosc"></Slider>
        
    </Grid>
</Window>
